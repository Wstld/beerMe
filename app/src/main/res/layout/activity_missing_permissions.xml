<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MissingPermissionsActivity">

    <ImageView
        android:id="@+id/tempBeerLogo"
        android:layout_width="300dp"
        android:layout_height="221dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/tempbeerlogo" />

    <TextView
        android:id="@+id/errorMessage"
        android:layout_width="191dp"
        android:layout_height="53dp"
        android:layout_marginTop="10dp"
        android:text="Oops! Något gick fel."
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tempBeerLogo" />

    <TextView
        android:id="@+id/errorMessage2"
        android:layout_width="220dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:text="StudentBeer behöver tillgång till din GPS för att fungera optimalt."
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/errorMessage" />

    <Button
        android:id="@+id/givePermissionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:backgroundTint="#4B668E"
        android:text="Tillåt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/errorMessage2" />
</androidx.constraintlayout.widget.ConstraintLayout>